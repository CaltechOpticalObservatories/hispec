#!/usr/bin/python3.12
'''Module for the RED Standa Attenuator Daemon'''
import argparse
import sys
from typing import Dict, Any #pylint: disable = W0611

from hispec.daemon import HispecDaemon #pylint: disable = E0401,E0611
from hispec.util.standa import SmcController #pylint: disable = E0401,E0611

class Hketatten(HispecDaemon): #pylint: disable = W0223
    '''Daemon for controlling the RED Standa Attenuator Mount via Standa Controller'''
    # Defaults
    peer_id = "hketatten"
    group_id = "hscal"
    transport = "rabbitmq"
    discovery_enabled = False
    rabbitmq_url = "amqp://localhost"  # RabbitMQ on hispec
    daemon_desc = "HK Standa Attenuator"

    # pub/sub topics
    topics = {}

    def __init__(self):
        """Initialize the RED Standa Attenuator daemon.

        Args: come from the hscal configuration file
        """
        super().__init__()


        #load configuration from hscal.yaml
        self.device_uri = self._config.get("hardware", {}).get("device_uri", "")
        self.device_key = None
        self.dev = SmcController(log = True)

        # Daemon state
        self.state = {
            'connected': False,
            'error': '',
            'homed': False
        }

    def get_named_positions(self):
        """Get named positions from config (e.g., home, deployed, science)."""
        return self._config.get("named_positions", {})

    def get_named_position(self, name: str):
        """Get a specific named position value, or None if not found."""
        return self.get_named_positions().get(name)

    def cur_named_position(self):
        """Get the name of the current position, if it matches a named position."""
        if not self.state['connected']:
            return {"ok": False, "error": "Not connected to hardware"}

        try:
            current_pos = int(self.dev.get_pos())

            for name, pos in self.get_named_positions().items():
                d = abs(int(pos) - int(current_pos))
                if d <= 10:  # Assuming tolerance of 10 steps (adjust as needed)
                    return {"ok": True, "named_pos": name, "position": current_pos}
        except Exception as e: # pylint: disable=W0718
            self.logger.error("Error: %s",e)
            return {"ok": False, "error": str(e)}
        return {"ok": True, "named_pos": "unknown", "position": current_pos} #pylint: disable = C0301


    def on_start(self, libby):
        '''Starts up daemon and initializies the hardware device'''
        self.logger.info("Starting %s Daemon", self.daemon_desc)
        self.add_services({
            "connect":      lambda p: self.connect(),
            "disconnect":   lambda p: self.disconnect(),
            "initialize":   lambda p: self.initialize(),
            "status":       lambda p: self.status(),
            "position.get": lambda p: self.get_pos(),
            "position.set": lambda p: self.set_pos(pos = p.get("position")),
            "position.get_named": lambda p: self.cur_named_position(),
            "position.set_named": lambda p: self.goto_named_pos(name = p.get("named_pos")),
            "home":  lambda p: self.home(),
            "home.is_homed":  lambda p: self.is_homed(),
            "cleanup":     lambda p: self.clean_up_device()
        })
        # Initialize hardware connection
        if self.device_uri == "":
            self.logger.error("No device URI specified for Standa Attenuator controller")
            self.state['error'] = 'No device URI specified'
        else:
            try:
                connection = self.connect()
                if not connection.get("ok"):
                    raise ConnectionError(connection.get("error"))
                self.state['connected'] = True
                self.logger.info("Daemon started successfully and connected to hardware")
                self.initialize()
                self.logger.info("Initialized %s", self.daemon_desc)
            except ConnectionRefusedError as e:
                self.logger.error("Failed to connect to hardware: %s", e)
                self.logger.warning("Daemon will start but hardware is not available")
                self.state['error'] = str(e)
                self.state['connected'] = False

        # Publish initial status
        libby.publish("hketatten.status", self.state)

    def on_stop(self, libby) -> None: #pylint: disable=W0222
        '''Stops the daemon and disconnects from hardware device'''
        try:
            self.clean_up_device()
            self.disconnect()
            self.logger.info("Disconnected %s", self.daemon_desc)
            libby.publish("hketatten", {"Daemon Shutdown": "Success"})
        except Exception as e: # pylint: disable=W0718
            libby.publish("hketatten", {"Daemon Startup": "Failed", "error":f"{e}"})
            self.logger.error("Disconnect %s:: Failed ", self.daemon_desc)

    def clean_up_device(self):
        '''Cleans up device settings'''
        try:
            self.dev.home()
            self.logger.info("Cleaned up %s", self.daemon_desc)
        except Exception as e: # pylint: disable=W0718
            self.logger.error("error during cleanup: %s",e)
            return {"ok": False, "error": str(e)}
        return {"ok": True, "message": " cleaned up"}

    def connect(self):
        """handles connection"""
        try:
            self.dev.connect(connection_type="tcp", device_str=self.device_uri)
            if not self.dev.is_connected():
                raise ConnectionError("Failed to connect to device")
            self.logger.info("Connected %s", self.daemon_desc)
        except Exception as e: # pylint: disable=W0718
            self.logger.error("Failed to Connect to Hardware: %s",e)
            return {"ok": False, "error": str(e)}
        return {"ok": True, "message": "Connected to hardware"}

    def disconnect(self):
        """handles disconnection"""
        try:
            self.dev.disconnect()
            if self.dev.is_connected():
                raise ConnectionAbortedError("Failed to disconnect to device")
            self.logger.info("Disconnected from %s", self.daemon_desc)
        except Exception as e: # pylint: disable=W0718
            self.logger.error("error: %s",e)
            return {"ok": False, "error": str(e)}
        return {"ok": True, "message": "Disconnected from hardware"}

    def initialize(self):
        """handles initialization"""
        # Just grab info, and home the device
        if not self.state['connected']:
            return {"ok": False, "error": "Not connected to hardware"}

        try:
            self.dev.get_info()
            self.dev.home()
            self.logger.debug("Initialized %s", self.daemon_desc)
        except Exception as e: # pylint: disable=W0718
            self.logger.error("error: %s",e)
            return {"ok":False , "error": str(e)}
        return {"ok": True}

    def status(self):
        """handles status"""
        if not self.state['connected']:
            return {"ok": False, "error": "Not connected to hardware"}

        try:
            dev_state = self.dev.get_status()
            status = {
                "is_connected": self.dev.is_connected(),
                "device_state": dev_state,
                "position": self.dev.get_pos(),
                "named_position": self.cur_named_position().get("named_pos")
            }
            self.logger.debug("status: %s",status)
        except Exception as e: # pylint: disable=W0718
            self.logger.error("error: %s",e)
            return {"ok": False, "error": str(e)}
        return {"ok": True, "status": status}

    def home(self):
        '''homes the device'''
        if not self.state['connected']:
            return {"ok": False, "error": "Not connected to hardware"}
        try:
            self.dev.home()
            self.logger.debug("home: done")
            position = self.dev.get_pos()
            homed = self.dev.is_homed()
            self.state['homed'] = homed
        except Exception as e: # pylint: disable=W0718
            self.logger.error("error: %s",e)
            return {"ok": False, "error": str(e)}
        return {"ok":True, "position": position}

    def is_homed(self):
        '''gets homed bool'''
        if not self.state['connected']:
            return {"ok": False, "error": "Not connected to hardware"}
        try:
            homed = self.dev.is_homed()
            self.logger.debug("is_homed: %s",homed)
            self.state['homed'] = homed
        except Exception as e: # pylint: disable=W0718
            self.logger.error("error: %s",e)
            return {"ok": False, "error": str(e)}
        return {"ok":True, "is_homed": homed}

    def get_pos(self):
        '''gets current position'''
        if not self.state['connected']:
            return {"ok": False, "error": "Not connected to hardware"}
        try:
            position = self.dev.get_pos()
            self.logger.debug("get_pos: %s",position)
        except Exception as e: # pylint: disable=W0718
            self.logger.error("error: %s",e)
            return {"ok": False, "error": str(e)}
        return {"ok":True, "position": position}

    def set_pos(self, pos):
        '''sets current position'''
        if not self.state['connected']:
            return {"ok": False, "error": "Not connected to hardware"}
        try:
            pos = int(pos)
            self.dev.set_pos(pos)
            self.logger.debug("set_pos: %s",pos)
            position = self.dev.get_pos()
        except Exception as e: # pylint: disable=W0718
            self.logger.error("error: %s",e)
            return {"ok": False, "error": str(e)}
        return {"ok":True, "position": position}

    def goto_named_pos(self, name):
        '''moves to named position'''
        if not self.state['connected']:
            return {"ok": False, "error": "Not connected to hardware"}

        try:
            goal = self.get_named_position(name.lower())
            if goal is not None:
                self.set_pos(goal)
            self.logger.debug("goto_named_pos: %s -> %s",name,goal)
            cur_pos = self.dev.get_pos()
        except Exception as e: # pylint: disable=W0718
            self.logger.error("Error: %s",e)
            return {"ok": False, "error": str(e)}
        return {"ok": True, "named_pos": name, "position": cur_pos}

def main():
    """Main entry point for the daemon."""
    parser = argparse.ArgumentParser(
        description='HSCAL HK Standa Attenuator Daemon'
    )
    parser.add_argument(
        '-c', '--config',
        type=str,
        help='Path to config file (YAML or JSON)'
    )
    parser.add_argument(
        '-d', '--daemon-id',
        type=str,
        default='',
        help='Daemon ID (required for subsystem configs with multiple daemons)'
    )
    parser.add_argument(
        '-u', '--device-uri',
        type=str,
        default='192.168.29.100',
        help='device URI(default:192.168.29.100)'
    )

    args = parser.parse_args()

    # Create and run daemon
    try:
        if args.config:
            # Load from config file
            daemon = Hketatten.from_config_file(
                args.config,
                daemon_id=args.daemon_id,
            )
        else:
            # Use CLI args - build config dict and use from_config
            config = {
                "peer_id": "hketatten",
                "group_id": "hscal",
                "transport": "rabbitmq",
                "hardware": {
                    "device_uri": args.device_uri
                }
            }
            daemon = Hketatten.from_config(config)
        daemon.serve()
    except KeyboardInterrupt:
        print("\nDaemon interrupted by user")
        sys.exit(0)
    except Exception as e: # pylint: disable=W0718
        print(f"Error running daemon: {e}", file=sys.stderr)
        sys.exit(1)


if __name__ == '__main__':
    main()
